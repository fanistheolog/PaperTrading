<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b1b1b">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundhome">

        <androidx.cardview.widget.CardView
            android:layout_width="341dp"
            android:layout_height="320dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="282dp"
            android:layout_marginBottom="25dp"
            android:rotation="7"
            android:visibility="gone"

            app:cardBackgroundColor="#2b3038"
            app:cardCornerRadius="12dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="12dp"
            card_view:cardUseCompatPadding="true" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="175dp"
            android:fontFamily="@font/convergence"
            android:text="See All The Calculators"
            android:textColor="#43474d"
            android:textSize="18sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="575sp"
            android:fontFamily="@font/convergence"
            android:text="Scroll to see more"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:visibility="gone" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="165dp"
                android:layout_height="118dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/stocklogo2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35sp"
                android:fontFamily="@font/convergence"
                android:gravity="center"
                android:text="Welcome to Paper Traders"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/akla"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:text="Investment Calculator"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5sp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/first"
                    android:layout_width="327dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="50dp"

                    android:visibility="visible"
                    app:cardBackgroundColor="#009e84"
                    app:cardCornerRadius="4dp"

                    card_view:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="335dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="5sp"
                        android:fontFamily="@font/convergence"
                        android:gravity="center"
                        android:text="Trade"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/second"
                    android:layout_width="327dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="50dp"

                    android:visibility="visible"
                    app:cardBackgroundColor="#009e84"
                    app:cardCornerRadius="4dp"

                    card_view:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="335dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="5sp"
                        android:fontFamily="@font/convergence"
                        android:gravity="center"
                        android:text="How To Use"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:orientation="vertical">

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/returnratebutton"
                    android:layout_width="327dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="50dp"

                    android:visibility="visible"
                    app:cardBackgroundColor="#009e84"

                    card_view:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="335dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="5sp"
                        android:fontFamily="@font/convergence"
                        android:gravity="center"
                        android:text="About The Creator"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:orientation="vertical">

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/startingamountbutton"
                    android:layout_width="327dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="22dp"

                    android:visibility="visible"
                    app:cardBackgroundColor="#009e84"
                    app:cardCornerRadius="4dp"

                    card_view:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="335dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="5sp"
                        android:fontFamily="@font/convergence"
                        android:gravity="center"
                        android:text="More Charts"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:orientation="vertical">

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>